<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center|center_vertical"
        android:text="@string/titleTextView" />

    <Button
        android:id="@+id/udpateTitleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/udpateTitleBtn" />

    <Button
        android:id="@+id/toastTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toastTestBtn" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/closeBtn" />

    <Button
        android:id="@+id/visibilityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/visibilityBtn" />

</LinearLayout>